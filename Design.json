          "background": "#D1FAE5",
          "border": "#6EE7B7",
          "text": "#065F46",
          "icon": "#10B981"
        },
        "warning": {
          "background": "#FEF3C7",
          "border": "#FCD34D",
          "text": "#92400E",
          "icon": "#F59E0B"
        },
        "error": {
          "background": "#FEE2E2",
          "border": "#FCA5A5",
          "text": "#991B1B",
          "icon": "#EF4444"
        },
        "info": {
          "background": "#DBEAFE",
          "border": "#93C5FD",
          "text": "#1E40AF",
          "icon": "#3B82F6"
        }
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, -apple-system, sans-serif",
        "mono": "JetBrains Mono, monospace"
