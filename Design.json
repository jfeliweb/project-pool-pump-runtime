{
  "designSystem": {
    "metadata": {
      "projectName": "PoolCalc - Pool Pump Runtime Calculator",
      "designLanguage": "Modern SaaS with gradient accents",
      "primaryPurpose": "Calculator tool with dashboard management",
      "targetFramework": "Next.js 14 with Tailwind CSS + shadcn/ui"
    },

    "colorPalette": {
      "brand": {
        "primary": "#2563EB",
        "primaryHover": "#1D4ED8",
        "primaryActive": "#1E40AF",
        "secondary": "#10B981",
        "secondaryHover": "#059669",
        "accent": "#F59E0B",
        "accentHover": "#D97706"
      },
      "gradients": {
        "hero": {
          "start": "#2563EB",
          "end": "#10B981",
          "direction": "135deg",
          "appliesTo": ["hero backgrounds", "primary CTAs", "feature section backgrounds"],
          "doNotApply": ["text", "icons", "borders", "card content"]
        },
        "cardAccents": {
          "blue": {
            "start": "#3B82F6",
            "end": "#2563EB",
            "direction": "180deg",
            "opacity": "0.1 on backgrounds, 1.0 on overlays"
          },
          "green": {
            "start": "#10B981",
            "end": "#059669",
            "direction": "180deg"
          },
          "purple": {
            "start": "#A855F7",
            "end": "#9333EA",
            "direction": "180deg"
          },
          "pink": {
            "start": "#EC4899",
            "end": "#DB2777",
            "direction": "180deg"
          }
        }
      },
      "neutrals": {
        "background": "#F9FAFB",
        "surface": "#FFFFFF",
        "border": "#E5E7EB",
        "borderLight": "#F3F4F6",
        "text": {
          "primary": "#111827",
          "secondary": "#6B7280",
          "tertiary": "#9CA3AF",
          "inverse": "#FFFFFF"
        }
      },
      "semantic": {
