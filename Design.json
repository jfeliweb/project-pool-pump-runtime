          "doNotApply": ["body text", "labels", "navigation"]
        },
        "successGreen": {
          "color": "#10B981",
          "fontWeight": "600",
          "appliesTo": ["positive metrics", "savings amounts", "optimized values"]
        },
        "errorRed": {
          "color": "#EF4444",
          "fontWeight": "600",
          "appliesTo": ["current costs", "before optimization values"]
        }
