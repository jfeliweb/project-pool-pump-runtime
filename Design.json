          "fontSize": "48px",
          "lineHeight": "1.2",
          "fontWeight": "700",
          "letterSpacing": "-0.02em",
          "color": "#FFFFFF",
          "appliesTo": ["landing page hero", "main value propositions"]
        },
        "h1": {
          "fontSize": "36px",
          "lineHeight": "1.25",
          "fontWeight": "700",
          "letterSpacing": "-0.01em",
          "color": "#111827"
        },
        "h2": {
          "fontSize": "30px",
          "lineHeight": "1.3",
          "fontWeight": "700",
          "color": "#111827"
        },
        "h3": {
          "fontSize": "24px",
          "lineHeight": "1.4",
          "fontWeight": "600",
          "color": "#111827"
        },
        "body": {
          "fontSize": "16px",
          "lineHeight": "1.6",
          "fontWeight": "400",
          "color": "#6B7280"
        },
        "bodySmall": {
